# Supabase (онлайн, не локально)
# Отримайте з: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Database (PostgreSQL для Payload CMS)
# Можна використовувати Supabase PostgreSQL з Settings → Database → Connection string (URI)
DATABASE_URL=postgresql://user:password@host:5432/database

# Payload CMS
# Генеруйте безпечний ключ: openssl rand -base64 32
PAYLOAD_SECRET=your-secret-key-min-32-chars-change-in-production

# S3 Storage (Supabase Storage)
# Отримайте з: https://app.supabase.com/project/_/settings/storage
# Endpoint format: https://<project-id>.supabase.co/storage/v1/s3
S3_ENDPOINT=https://fyjmfleqajpzvvcpemsv.storage.supabase.co/storage/v1/s3
S3_REGION=eu-west-1
S3_BUCKET=media
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
